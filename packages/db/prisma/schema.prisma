generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Ledger {
  id        String   @id @default(cuid())
  ownerId   String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ledgerItems        LedgerEntry[]
  UserLedgerJunction UserLedgerJunction[]
}

enum LedgerEntryKind {
  one_time
  recurring
}

model LedgerEntry {
  id          String          @id @default(cuid())
  ledgerId    String
  name        String
  creatorId   String // id of the user who made this entry
  purchaserId String // id of the user who made this purchase for this entry
  kind        LedgerEntryKind
  oneTime     Json?
  recurring   Json?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  ledger           Ledger            @relation(fields: [ledgerId], references: [id])
  ledgerEntryItems LedgerEntryItem[]

  @@index([ledgerId])
}

model LedgerEntryItem {
  id            String @id @default(cuid())
  ledgerEntryId String
  name          String
  userId        String

  ledgerEntry LedgerEntry @relation(fields: [ledgerEntryId], references: [id])

  @@index([ledgerEntryId])
}

model UserLedgerJunction {
  ledgerId String
  userId   String

  ledger Ledger @relation(fields: [ledgerId], references: [id])

  @@id([userId, ledgerId])
  @@index([ledgerId])
}
